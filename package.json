{
	"private": true,
	"name": "squares",
	"scripts": {
		"test": "jest",
		"start": "set NODE_ENV=development&&webpack-dev-server --config webpack.client.js",
		"build-prod": "set NODE_ENV=production&&webpack -p --config webpack.client.js",
		"build-dev": "set NODE_ENV=development&&webpack -d --config webpack.client.js",
