	"browserslist": [
		"> 0.2%",
		"not dead",
		"ie <= 11",
		"not op_mini all"
	],
	"jest": {
		"transform": {
			"\\.jsx?$": "<rootDir>/node_modules/babel-jest"
		},
		"moduleNameMapper": {
			"\\.(css|s(a|c)ss)$": "identity-obj-proxy"
		},
		"unmockedModulePathPatterns": [
			"<rootDir>/node_modules/react",
