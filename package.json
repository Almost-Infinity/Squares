{
	"private": true,
	"name": "squares",
	"scripts": {
		"test": "jest",
		"start": "set NODE_ENV=development&&webpack-dev-server --config webpack.client.js",
		"build-prod": "set NODE_ENV=production&&webpack -p --config webpack.client.js",
		"build-dev": "set NODE_ENV=development&&webpack -d --config webpack.client.js",
		"build-server": "webpack -p --watch --config webpack.server.js",
		"serve": "nodemon ./build/app.js"
	},
	"devDependencies": {
		"@babel/core": "^7.7.5",
		"@babel/plugin-proposal-class-properties": "^7.7.4",
		"@babel/preset-env": "^7.7.6",
		"@babel/preset-react": "^7.7.4",
		"babel-eslint": "^10.0.3",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"chalk": "^2.4.2",
		"clean-webpack-plugin": "^2.0.2",
		"css-loader": "^2.1.1",
		"css-mqpacker": "^7.0.0",
		"cssnano": "^4.1.10",
		"cssnano-preset-advanced": "^4.0.7",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16": "^1.15.1",
		"eslint": "^5.16.0",
		"eslint-config-react-app": "^3.0.8",
		"eslint-loader": "^2.2.1",
		"eslint-plugin-flowtype": "^3.13.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.17.0",
		"file-loader": "^3.0.1",
		"html-webpack-plugin": "^3.2.0",
		"identity-obj-proxy": "^3.0.0",
		"image-webpack-loader": "^4.6.0",
		"jest": "^24.9.0",
		"mini-css-extract-plugin": "^0.5.0",
		"node-sass": "^4.13.0",
		"postcss-flexbugs-fixes": "^4.1.0",
		"postcss-loader": "^3.0.0",
		"postcss-preset-env": "^6.7.0",
		"progress-bar-webpack-plugin": "^1.12.1",
		"prop-types": "^15.7.2",
		"react-redux": "^7.1.3",
		"redux": "^4.0.4",
		"redux-thunk": "^2.3.0",
		"sass-loader": "^7.3.1",
		"style-loader": "^0.23.1",
		"terser-webpack-plugin": "^1.4.2",
		"url-loader": "^1.1.2",
		"webpack": "^4.41.2",
		"webpack-bundle-analyzer": "^3.6.0",
		"webpack-cli": "^3.3.10",
		"webpack-dev-server": "^3.9.0"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"body-parser": "^1.19.0",
		"config": "^3.2.4",
		"express": "^4.17.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-router": "^4.3.1",
		"react-router-dom": "^5.1.2"
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react"
		],
		"plugins": [
			"@babel/plugin-proposal-class-properties"
		]
	},
	"browserslist": [
		"> 0.2%",
		"not dead",
		"ie <= 11",
		"not op_mini all"
	],
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended"
		],
		"settings": {
			"react": {
				"pragma": "React",
				"version": "detect"
			}
		},
		"env": {
			"browser": true,
			"commonjs": true,
			"node": true,
			"es6": true
		},
		"parser": "babel-eslint",
		"parserOptions": {
			"sourceType": "module",
			"allowImportExportEverywhere": false,
			"codeFrame": true
		},
		"rules": {
			"no-console": "off",
			"curly": "warn",
			"strict": 0
		},
		"globals": {
			"DEVBUILD": "readonly"
		}
	},
	"jest": {
		"transform": {
			"\\.jsx?$": "<rootDir>/node_modules/babel-jest"
		},
		"moduleNameMapper": {
			"\\.(css|s(a|c)ss)$": "identity-obj-proxy"
		},
		"unmockedModulePathPatterns": [
			"<rootDir>/node_modules/react",
			"<rootDir>/node_modules/react-dom"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/source/setupTests.js"
		]
	}
}
