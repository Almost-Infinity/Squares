{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"no-unused-vars": [ "warn", { "vars": "all", "args": "after-used" } ],
		"strict": [ "error", "global" ],
		"curly": "warn"
	}
}