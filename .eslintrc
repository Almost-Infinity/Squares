{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"globalReturn": false,
			"impliedStrict ": true,
			"jsx": true
		}
	},
	"rules": {
		"no-console": "off",
		"strict": ["error", "global"],
		"curly": "warn"
	}
}